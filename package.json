{
  "name": "youtube-dl-gui",
  "version": "2.0.0-alpha.1",
  "description": "A GUI for the YouTube-dl library",
  "main": "main.js",
  "scripts": {
    "start": "electron . --dev",
    "dist": "electron-builder"
  },
  "keywords": [
    "youtube-dl",
    "electron",
    "download",
    "youtube",
    "gui",
    "interface"
  ],
  "author": "Jelle Glebbeek",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "bootstrap": "^4.5.3",
    "bootstrap-icons": "^1.3.0",
    "bottleneck": "^2.19.5",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.3.4",
    "execa": "^4.1.0",
    "jquery": "^3.5.1",
    "mkdirp": "^1.0.4",
    "windowbar": "^1.7.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jely2002/youtube-dl-gui.git"
  },
  "build": {
    "afterPack": "./fix-linux-builds.js",
    "appId": "com.jelleglebbeek.youtube-dl-gui",
    "asarUnpack": "**/binaries/*",
    "productName": "YouTube Downloader GUI",
    "copyright": "Copyright Â© 2020 Jelle Glebbeek",
    "win": {
      "target": "nsis",
      "icon": "renderer/img/icon.ico",
      "files": [
        "!ytdlgui_demo.gif",
        "!fix-linux-builds.js",
        "!**/binaries/ffmpeg",
        "!**/binaries/ffmpeg-linux",
        "!**/binaries/youtube-dl-darwin",
        "!**/renderer/img/icon.icns"
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/assets/icon.icns",
      "category": "public.app-category.utilities",
      "identity": null,
      "extraResources": [
        {
          "from": "resources",
          "to": "./",
          "filter": [
            "ffmpeg",
            "youtube-dl-darwin",
            "details",
            "downloading-icon.png",
            "done-icon.png"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "executableName": "youtube-dl-gui",
      "icon": "resources/assets/icon.png",
      "synopsis": "A cross-platform GUI for youtube-dl",
      "category": "X-utility",
      "desktop": {
        "Name": "YouTube-dl-GUI",
        "Icon": "youtube-dl-gui",
        "Comment": "A cross-platform GUI for youtube-dl"
      },
      "extraResources": [
        {
          "from": "resources",
          "to": "./",
          "filter": [
            "ffmpeg-linux",
            "youtube-dl-darwin",
            "details",
            "downloading-icon.png",
            "done-icon.png"
          ]
        }
      ]
    }
  }
}
